{
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run -c ./tests/unit/vitest.config.ts",
    "test:e2e": "cypress run -C ./tests/e2e/cypress.config.ts",
    "test:e2e:headless": "cypress open -C ./tests/e2e/cypress.config.ts"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "cypress": "^12.9.0",
    "eslint": "^8.37.0",
    "eslint-plugin-tailwindcss": "^3.11.0",
    "typescript": "^5.0.2",
    "vitest": "^0.29.8"
  }
}
